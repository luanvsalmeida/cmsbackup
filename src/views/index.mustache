<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>CMS</title>
  </head>
  <body>
    <h1>PÁGINA INICIAL</h1>

    {{#success}}
      <p class="success">Login realizado com sucesso!</p>
    {{/success}}

    {{#login}}
      <a class="options" href="/logout">Sair</a>
    {{/login}}

    {{^login}}
      <a class="options" href="/login">Entrar</a>
    {{/login}}

    <a class="options" href="/arquivos/novo">Criar Postagem</a>
    <a class="options" href="/arquivos">Postagens Disponíveis</a>
    
    <h2>POSTAGENS MAIS RECENTES</h2>
    <div>
    <label for="ordenar">Ordenar por:</label>
    <select id="ordenar" onchange="sortPosts()">
      <option value="padrao" {{#ordPadrao}}selected{{/ordPadrao}}>Padrão</option>
      <option value="data" {{#ordData}}selected{{/ordData}}>Data</option>
      <option value="titulo" {{#ordTitulo}}selected{{/ordTitulo}}>Título</option>
    </select>
  </div>
    {{#previews}}
      <li class="preview">
        <h2>{{titulo}}</h2>
        <a href="/arquivos/{{titulo}}.html">Ver completa</a>
        <p>{{{preview}}}</p>
      </li>
    {{/previews}}

    <script>
      function sortPosts() {
        const sort = document.getElementById('ordenar').value;
        document.cookie = 'ordenar' + "=" + sort;  
        window.location.href = `/`;
      }
    </script>
  </body>
</html>