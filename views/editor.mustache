<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nova Postagem</title>
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
</head>
<body>
    <style>
        #editor {
            height: 50vh; 
            max-height: 80vh;
            min-height: 200px;
        }
    </style>
    <form id="formulario" action="/users/salvarPostagem" method="post">
        <label for="titulo">TÃ­tulo da postagem</label>
        <input type="textfield" id="titulo" name="titulo"></input>
        <div id="editor" name="editor"> <!-- This is the container for the Quill editor -->
        </div>
        <input type="hidden" id="conteudoInput" name="postagem">
        <button type="submit">Salvar</button>
    </form>

    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script>
    var quill = new Quill('#editor', {
        theme: 'snow'
    });

    document.getElementById('formulario').addEventListener('submit', function(event) {
    event.preventDefault(); // Prevent the default form submission behavior
    
    // Get the HTML content of the Quill editor
    var editorContent = document.getElementById('editor').querySelector('.ql-editor').innerHTML;
    
    // Set the value of the hidden input field with the Quill editor content
    document.getElementById('conteudoInput').value = editorContent;
    
    // Submit the form
    this.submit();
});
</script>
</body>
</html>
